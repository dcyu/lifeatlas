.container.show
  .row
    .col-md-12
      %h1.brand-heading=@block_list.title

      %p=@block_list.description.html_safe        

  .language-block-list
    .table-responsive
      %table.table
        %thead
          %tr
            %th
            %th 普通话
            %th عربي شامي
            %th Español
            %th 廣東話
            %th Kiswahili
            %th Français
            %th Pусский
            %th Italian
            %th فارسی
            %th
            %th

        %tbody

          - @block_list.words.each do |word|
            %tr
              %td
                %strong
                  = word.english
              %td
                = word.mandarin
                -if word.mandarin_notes?
                  %em
                    =word.mandarin_notes
              %td
                = word.arabic
                -if word.arabic_notes?
                  %br/
                  %em
                    =word.arabic_notes
              %td
                = word.spanish
                -if word.spanish_notes?
                  %br/
                  %em
                    =word.spanish_notes
              %td
                = word.cantonese
                -if word.cantonese_notes?
                  %br/
                  %em
                    =word.cantonese_notes
              %td
                = word.swahili
                -if word.swahili_notes?
                  %br/
                  %em
                    =word.swahili_notes
              %td
                = word.french
                -if word.french_notes?
                  %br/
                  %em
                    =word.french_notes
              %td
                = word.russian
                -if word.russian_notes?
                  %br/
                  %em
                    =word.russian_notes
              %td
                = word.italian
                -if word.italian_notes?
                  %br/
                  %em
                    =word.italian_notes
              %td
                = word.persian
                -if word.persian_notes?
                  %br/
                  %em
                    =word.persian_notes
              -if user_signed_in?
                %td= link_to 'Edit', edit_word_path(word)
                %td= link_to 'Destroy', word, :method => :delete, :data => { :confirm => 'Are you sure?' }
  
  -if @block_list.mandarin_notes.present?
    .row
      .col-md-12
        %h3 普通话
        %p= @block_list.mandarin_notes.html_safe

  -if @block_list.arabic_notes.present?
    .row
      .col-md-12
        %h3 عربي شامي
        %p= @block_list.arabic_notes.html_safe

  -if @block_list.spanish_notes.present?
    .row
      .col-md-12
        %h3 Español
        %p= @block_list.spanish_notes.html_safe

  -if @block_list.cantonese_notes.present?
    .row
      .col-md-12
        %h3 廣東話
        %p= @block_list.cantonese_notes.html_safe

  -if @block_list.swahili_notes.present?
    .row
      .col-md-12
        %h3 Kiswahili
        %p= @block_list.swahili_notes.html_safe

  -if @block_list.french_notes.present?
    .row
      .col-md-12
        %h3 Français
        %p= @block_list.french_notes.html_safe

  -if @block_list.russian_notes.present?
    .row
      .col-md-12
        %h3 Pусский
        %p= @block_list.russian_notes.html_safe

  -if @block_list.italian_notes.present?
    .row
      .col-md-12
        %h3 Italiano
        %p= @block_list.italian_notes.html_safe

  -if @block_list.persian_notes.present?
    .row
      .col-md-12
        %h3 فارسی
        %p= @block_list.persian_notes.html_safe

  -if current_user
    = link_to 'Edit', edit_block_list_path(@block_list)
    \|
  = link_to 'Back', words_path
