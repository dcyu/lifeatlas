= form_for @word do |f|
  - if @word.errors.any?
    #error_explanation
      %h2= "#{pluralize(@word.errors.count, "error")} prohibited this word from being saved:"
      %ul
        - @word.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :english
    = f.text_field :english
  .form-group
    = f.label :mandarin
    = f.text_field :mandarin
  .form-group
    = f.label :arabic
    = f.text_field :arabic
  .form-group
    = f.label :spanish
    = f.text_field :spanish
  .form-group
    = f.label :cantonese
    = f.text_field :cantonese
  .form-group
    = f.label :swahili
    = f.text_field :swahili
  .form-group
    = f.label :french
    = f.text_field :french
  .form-group
    = f.label :russian
    = f.text_field :russian
  .row
    .col-md-4
      = f.submit 'Save'
