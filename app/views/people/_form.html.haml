= form_for @person do |f|
  - if @person.errors.any?
    #error_explanation
      %h2= "#{pluralize(@person.errors.count, "error")} prohibited this person from being saved:"
      %ul
        - @person.errors.full_messages.each do |msg|
          %li= msg

  .form-group  
    = f.label :first_name
    = f.text_field :first_name
  .form-group  
    = f.label :last_name
    = f.text_field :last_name
  .form-group  
    = f.label :facebook_link
    = f.text_field :facebook_link
  .form-group  
    = f.label :linkedin_link
    = f.text_field :linkedin_link
  .actions
    = f.submit 'Save'
