.container.content-section
  
  .row
    .col-md-5
      %h1 New destination

    .col-md-7
  
      .panel.panel-info
        .panel-body
          = form_for @destination do |f|
            - if @destination.errors.any?
              #error_explanation
                %h2= "#{pluralize(@destination.errors.count, "error")} prohibited this destination from being saved:"
                %ul
                  - @destination.errors.full_messages.each do |msg|
                    %li= msg

            .form-group
              = f.text_field :name, class: "form-control", placeholder: "Chicago, IL"
            .row
              .col-md-4
                = f.submit 'Save', class: "btn btn-default"