= form_for @destination do |f|
  - if @destination.errors.any?
    #error_explanation
      %h2= "#{pluralize(@destination.errors.count, "error")} prohibited this destination from being saved:"
      %ul
        - @destination.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :arrived_on
    = f.date_select :arrived_on
  .field
    = f.label :left_on
    = f.date_select :left_on
  .field
    = f.label :lng
    = f.text_field :lng
  .field
    = f.label :lat
    = f.text_field :lat
  .actions
    = f.submit 'Save'
