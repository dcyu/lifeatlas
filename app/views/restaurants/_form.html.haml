= form_for @restaurant do |f|
  - if @restaurant.errors.any?
    #error_explanation
      %h2= "#{pluralize(@restaurant.errors.count, "error")} prohibited this restaurant from being saved:"
      %ul
        - @restaurant.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.text_field :name, placeholder: "Restaurant Name", class: "form-control"
  .form-group
    =f.collection_select :destination_id, Destination.order(:name), :id, :name
  .row
    .col-md-4
      = f.submit 'Save', class: "btn btn-default"
