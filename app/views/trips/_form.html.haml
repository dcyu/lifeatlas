= form_for @trip do |f|
  - if @trip.errors.any?
    #error_explanation
      %h2= "#{pluralize(@trip.errors.count, "error")} prohibited this trip from being saved:"
      %ul
        - @trip.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :arrived_on
    = f.date_select :arrived_on
  .field
    = f.label :left_on
    = f.date_select :left_on
  .field
    = f.label :destination_id
    = f.number_field :destination_id
  .actions
    = f.submit 'Save'
