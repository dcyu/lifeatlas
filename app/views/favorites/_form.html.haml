= form_for @favorite do |f|
  - if @favorite.errors.any?
    #error_explanation
      %h2= "#{pluralize(@favorite.errors.count, "error")} prohibited this favorite from being saved:"
      %ul
        - @favorite.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :title
    = f.text_field :title, class: "form-control"
  .form-group
    = f.label :answer
    = f.text_field :answer, class: "form-control"
  .row
    .col-md-4
      = f.submit 'Save', class: "btn btn-default"
